{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "experimental-block/post-slider",
	"version": "0.1.0",
	"title": "Post Slider",
	"description": "Creates a carousel slider for displaying posts, allowing for visual post navigation.",
	"attributes": {
		"blockId": {
			"type": "string",
			"default": ""
		},
		"contentType": {
			"type": "string",
			"default": "recent"
		},
		"postIds": {
			"type": "string",
			"default": ""
		},
		"categoryIds": {
			"type": "string",
			"default": ""
		},
		"numPosts": {
			"type": "number",
			"default": 3
		},
		"speed": {
			"type": "number",
			"default": 2000
		},
		"perPage": {
			"type": "number",
			"default": 3
		},
		"autoPlay": {
			"type": "boolean",
			"default": true
		},
		"showDots": {
			"type": "boolean",
			"default": false
		},
		"showArrow": {
			"type": "boolean",
			"default": true
		},
		"pauseHover": {
			"type": "boolean",
			"default": true
		},
		"design": {
			"type": "string",
			"default": "one"
		},
		"showThumbnail": {
			"type": "boolean",
			"default": true
		},
		"showAuthor": {
			"type": "boolean",
			"default": true
		},
		"showDate": {
			"type": "boolean",
			"default": true
		},
		"showExcert": {
			"type": "boolean",
			"default": true
		},
		"layout": {
			"type": "string",
			"default": "grid"
		},
		"containerHeight": {
			"type": "number",
			"default": 2000
		},
		"imageHeight": {
			"type": "number",
			"default": 300
		},
		"wordlimit": {
			"type": "number",
			"default": 30
		},
		"titleFontSize": {
			"type": "number",
			"default": 24
		}
	},
	"supports": {
		"html": false,
		"align": true
	},
	"textdomain": "post-slider",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
